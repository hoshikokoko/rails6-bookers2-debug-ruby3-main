<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to (@books.user) do %>
            <%= image_tag @books.user.get_profile_image, size:'100x100' %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, @books %></td>
          <td><%= @books.body %></td>
          <td>
            <% if @user == current_user %>
            <%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
          <td>
            <% if @user == current_user %>
            <%= link_to 'Destroy', book_path(@books.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
            <% end %>
          </td>
        <td class="<%= @books.id %>">
          <%= render "favorites/favorite_btn", book: @books %>
        </td>
          <td>
            <p>コメント数:<%= @books.book_comments.count %></p>
          </td>
        </tr>
        <% @books.book_comments.each do |book_comment| %>
        <tr>
          <td><%= link_to (book_comment.user) do %>
            <%= image_tag book_comment.user.get_profile_image, size:'100x100' %><br>
            <%= book_comment.user.name %>
            <% end %>
          </td>
          <td>
            <%= book_comment.comment %>
          </td>
          <% if book_comment.book.commented_by?(current_user) %>
          <td>
            <%= link_to "Destroy", book_book_comments_path(book_comment.book), method: :delete, class: "btn btn-danger btn-sm btn-block" %>
          </td>
          <% end %>
        </tr>
        <% end %>
      </table>
      <div>
        <%= form_with model: [@books, @book_comment] do |f| %>
          <%= f.text_area :comment %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>