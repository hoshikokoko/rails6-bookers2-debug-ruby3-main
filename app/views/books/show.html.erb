<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to (@booker.user) do %>
            <%= image_tag @booker.user.get_profile_image, size:'100x100' %><br>
            <%= @booker.user.name %>
            <% end %>
          </td>
          <td><%= link_to @booker.title, @booker %></td>
          <td><%= @booker.body %></td>
          <td>
            <% if @user == current_user %>
            <%= link_to 'Edit', edit_book_path(@booker), class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
          <td>
            <% if @user == current_user %>
            <%= link_to 'Destroy', book_path(@booker.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
            <% end %>
          </td>
          <td>
            <% if @booker.favorited_by?(current_user) %>
              <p>
                <%= link_to book_favorites_path(@booker), method: :delete do %>
                  ♥<%= @booker.favorites.count %>
                <% end %>
              </p>
            <% else %>
              <p>
                <%= link_to book_favorites_path(@booker), method: :post do %>
                  ♡<%= @booker.favorites.count %>
                <% end %>
              </p>
            <% end %>
          </td>
          <td>
            <p>コメント数:<%= @booker.book_comments.count %></p>
          </td>
        </tr>
        <% @booker.book_comments.each do |book_comment| %>
        <tr>
          <td><%= link_to (book_comment.user) do %>
            <%= image_tag book_comment.user.get_profile_image, size:'100x100' %><br>
            <%= book_comment.user.name %>
            <% end %>
          </td>
          <td>
            <%= book_comment.comment %>
          </td>
          <% if book_comment.book.commented_by?(current_user) %>
          <td>
            <%= link_to "Destroy", book_book_comments_path(book_comment.book), method: :delete %>
          </td>
          <% end %>
        </tr>
        <% end %>
      </table>
      <div>
        <%= form_with model: [@booker, @book_comment] do |f| %>
          <%= f.text_area :comment %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>